<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inspectPlantActivity" >

    <ImageView
        android:id="@+id/plantImage"
        android:layout_width="165dp"
        android:layout_height="188dp"
        android:layout_below="@id/plantType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="-19dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="265dp"
        android:layout_marginRight="211dp"
        android:layout_marginBottom="441dp"
        android:background="#009688"
        app:srcCompat="@drawable/notfound" />

    <TextView
        android:id="@+id/idealCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignTop="@id/plantImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="2dp"
        android:fontFamily="casual"
        android:text="Ideal Conditions"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/design_default_color_primary_dark"
        android:textColorHighlight="#673AB7"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/plantType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plantName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:text="Plant Type"
        android:textColorHighlight="#040303"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/plantInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idealCondition"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="-19dp"
        android:text="plant info"
        android:textColor="#000000"
        android:textSize="24sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/plantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:fontFamily="serif"
        android:soundEffectsEnabled="true"
        android:text="Plant Name"
        android:textAllCaps="true"
        android:textColor="#01685F"
        android:textIsSelectable="false"
        android:textSize="36sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />

    <Button
        android:id="@+id/deletePlant"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="24dp"
        android:text="DELETE Plant" />

</RelativeLayout>